<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/niedowaga"
        android:layout_width="125dp"
        android:layout_height="280dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/niedowaga" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="162dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="PODAJ WZROST"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/wzrostNumber"
        android:layout_width="91sp"
        android:layout_height="44sp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/wagaNumber"
        android:layout_width="91sp"
        android:layout_height="44sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/wzrostNumber" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="146dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="PODAJ WAGÄ˜"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button
        android:id="@+id/LICZ_Button"
        android:layout_width="174dp"
        android:layout_height="66dp"
        android:layout_marginTop="40dp"
        android:text="OBLICZ BMI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wagaNumber" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:text="TWOJE BMI WYNOSI:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LICZ_Button" />

    <TextView
        android:id="@+id/wynik"
        android:layout_width="194dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/prawidlowa"
        android:layout_width="125dp"
        android:layout_height="280dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/prawidlowa" />

    <ImageView
        android:id="@+id/nadwaga"
        android:layout_width="125dp"
        android:layout_height="280dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/nadwaga" />

    <ImageView
        android:id="@+id/stopienI"
        android:layout_width="125dp"
        android:layout_height="280dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/stopieni" />

    <ImageView
        android:id="@+id/stopienII"
        android:layout_width="125dp"
        android:layout_height="280dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/stopienii" />

    <ImageView
        android:id="@+id/stopienIII"
        android:layout_width="125dp"
        android:layout_height="280dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/stopieniii" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="224dp"
        android:layout_height="72dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bemi" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="44sp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="52dp"
        android:text="W M"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/wzrostNumber"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="44sp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:text="W KG"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/wagaNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>